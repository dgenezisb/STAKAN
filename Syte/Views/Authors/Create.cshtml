@model Syte.Models.Authors

@{
    ViewData["Title"] = "Новый автор";
}

<h1>Добавление автора</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Фамилия</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата рождения</label>
                <input asp-for="DateBD" class="form-control" />
                <span asp-validation-for="DateBD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата смерти</label>
                <input asp-for="DateOfdeath" class="form-control" />
                <span asp-validation-for="DateOfdeath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить автора" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
