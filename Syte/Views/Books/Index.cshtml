@model IEnumerable<Syte.Models.Book>

@{
    ViewData["Title"] = "Список кинг";
}

<h1>Список книг</h1>

<p>
    <a asp-action="Create">Добавить новую книгу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Название</label>
            </th>
            <th>
                <label class="control-label">Автор</label>
            </th>
            <th>
                <label class="control-label">Жанр</label>
            </th>
            <th>
                <label class="control-label">Издательство</label>
            </th>
            <th>
                <label class="control-label">Подборка</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compilation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> | 
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
