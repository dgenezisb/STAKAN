@model Syte.Models.Book

@{
    ViewData["Title"] = "Удаление книги";
}

<h1>Удаление</h1>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label class="control-label">Название</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Автор</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Surname)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Описание</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Жанр</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">URL ссылка на обложку</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Издательство</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Подборка</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Compilation.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить книгу" class="btn btn-danger" /> |
        <a asp-action="List">Вернуться к библиотеке книг</a>
    </form>
</div>
